<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <Button
        android:id="@+id/voteViewBtn"
        android:layout_width="223dp"
        android:layout_height="70dp"
        android:layout_marginTop="140dp"
        android:text="Vote in election"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pastVotesBtn"
        android:layout_width="223dp"
        android:layout_height="70dp"
        android:layout_marginTop="52dp"
        android:text="View your votes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voteViewBtn" />

    <Button
        android:id="@+id/upcomingElectionsBtn"
        android:layout_width="223dp"
        android:layout_height="70dp"
        android:layout_marginBottom="220dp"
        android:text="View upcoming elections"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pastVotesBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>