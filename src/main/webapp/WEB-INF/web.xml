<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>login.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>login.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewElectionsServlet</servlet-name>
        <servlet-class>view.ViewElectionsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertDataServlet</servlet-name>
        <servlet-class>insert.InsertDataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateElectionServlet</servlet-name>
        <servlet-class>insert.CreateElectionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertCandidatesServlet</servlet-name>
        <servlet-class>insert.InsertCandidatesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeRedirectServlet</servlet-name>
        <servlet-class>login.HomeRedirectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewElectionsServlet</servlet-name>
        <url-pattern>/ViewElectionsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertDataServlet</servlet-name>
        <url-pattern>/InsertDataServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateElectionServlet</servlet-name>
        <url-pattern>/CreateElectionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertCandidatesServlet</servlet-name>
        <url-pattern>/InsertCandidatesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeRedirectServlet</servlet-name>
        <url-pattern>/HomeRedirectServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
